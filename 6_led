long seg1 = 0;
long seg2 = 0;
int state = 0;
int ledv=4;
int leda=3;
int ledr=5;
volatile int ev=HIGH;
const int i=2;
int ea=5000;
int er;
void setup()
{
  Serial.begin(9600);
  pinMode(ledv,OUTPUT);
  pinMode(leda,OUTPUT);
  pinMode(ledr,OUTPUT);
  attachInterrupt(digitalPinToInterrupt(2),avisar,CHANGE);
}

void loop()
{   
  seg1 =millis();
  
 if((seg1-seg2)>ea){
 ev=!ev;
 seg2=seg1;
 }
  digitalWrite(ledv,ev);

  
}
void avisar(){


  ea=ea-500;
 
}

